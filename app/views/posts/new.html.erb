<%= form_for(:post, url: "/blog", method: :post) do |f| %>
<div class="container">
    <div class="row">
        <div class="col-md-12 create-blog">
            <h1>Create a new blog post</h1>
            <div class="controls">
                <div class="row">
                    <div class="form-group">
                        <label for="name">Post Title</label>
                        <%= f.text_field :title, class: "form-control", placeholder: "Enter post title" %>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <%= f.check_box :featured %>
                        <%= label_tag(:featured, "Featured Post") %>
                    </div>
                </div>
                <div class="row">
                    <label for="content">Post</label>
                    <div class="form-group">
                        <%= f.text_area :content, id: "post-editor"%>
                    </div>
                </div>
                
                <div class="row">
                    <div class="text-center">
                        <%= f.submit "Publish Post", class: "btn btn-primary btn-block" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% end %>