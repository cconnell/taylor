<body data-spy="scroll" data-target="#navigation" data-offset="120">
  <!-- intro-->
  <section id="intro" class="intro">      
    <div class="overlay"></div>
    <div class="content">
      <div class="container clearfix">
        <div class="row">
          <div>
            <h1><%= sanitize @landing_page_content[0].content %></h1>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- intro end-->
  <!-- navbar-->
  <header class="header">
    <div class="sticky-wrapper">
      <div role="navigation" class="navbar navbar-default">
        <div class="container">
          <div class="navbar-header">
            <button type="button" data-toggle="collapse" data-target=".navbar-collapse" class="navbar-btn btn-sm navbar-toggle"><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button><a href="#intro" class="navbar-brand scroll-to">
            <%= image_tag "logo.png" %></a>
          </div>
          <div id="navigation" class="collapse navbar-collapse navbar-right index-navigation">
            <ul class="nav navbar-nav">
              <li class="active"><a href="#intro">Home</a></li>
              <li><a href="#about">About</a></li>
              <li><a href="#work">Work</a></li>
              <li><a href="#art">Art</a></li>
              <li><a href="#random">Random</a></li>
              <li><a href="/blog">Blog</a></li>
              <li><a href="#contact">Contact</a></li>
              <% if current_admin %>
                <li class="admin-li"><a href="/admin">Admin Panel</a></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </header>
  <!-- /.navbar-->
  <!-- about-->
  <section id="about" class="text">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h2 class="heading">About me</h2>
          <p class="lead"><%= sanitize @landing_page_content[1].content %></p>
          <p><%= sanitize @landing_page_content[2].content %></p>
        </div>
        <div class="col-md-5 col-md-offset-1">
          <p><%= image_tag "taylor-528-min.jpg", class:"img-responsive img-circle" %></p>
        </div>
      </div>
    </div>
  </section>
  <!-- about end-->
  
  <!-- Services-->
  <section id="work" class="text-page section-inverse">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h2 class="heading">Work</h2>
          <div class="row work">
            <div class="lead"><%= sanitize @landing_page_content[3].content %></div>
            <p><%= sanitize @landing_page_content[4].content %></p>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Services end-->
  
  <!-- Portfolio / gallery-->
  <section id="art" class="gallery">
    <div class="container clearfix">
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-12">
              <h2 class="heading">Art</h2></h2>
                <p class="lead"><%= sanitize @landing_page_content[5].content %></p>
                <p><%= sanitize @landing_page_content[6].content %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Portfolio / gallery end-->
  <!-- text page-->
  <section id="random" class="text-page section-inverse">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h2 class="heading">Random</h2>
          <div class="row random">
            <p class="lead"><%= sanitize @landing_page_content[7].content %></p>
            <p><%= sanitize @landing_page_content[8].content %></p>
        </div>
      </div>
    </div>
  </section>
  <!-- text page end-->
    <% if @posts %>
    <section id="blog" class="gallery">
      <div class="container clearfix">
        <div class="row">
          <div class="col-md-12">
            <div class="row">
              <div class="col-md-12">
                <h2 class="heading"><a href="/blog/">Blog</a></h2>
                  <% @posts.each do |post| %>
                    <div class="blog-preview">
                      <a href="/blog/<%= post.slug %>"><p class="lead"><%= post.title %></p>
                      <p><%= sanitize post.content.truncate_words(75, omission: "... (continued)") %></p></a>
                    </div>
                  <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </section>
  <!-- Portfolio / gallery end-->
  <!-- contact-->
  <section id="contact" style="background-color: #eee" class="text-page"> 
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h2 class="heading">Contact</h2>
          <%= form_for(:message, url: "/messages", method: :post) do |f| %>
            <div class="row">
              <div class="col-md-6">
                <div class="controls">
                  <div class="row">
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label for="name">Your firstname *</label>
                        <%= f.text_field :first_name, class: "form-control", placeholder: "Enter your firstname" %>
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label for="surname">Your lastname *</label>
                        <%= f.text_field :last_name, class: "form-control", placeholder: "Enter your lastname" %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="surname">Your email *</label>
                    <%= f.text_field :email, class: "form-control", placeholder: "Enter your email" %>
                  </div>
                  <div class="form-group" id="message-field">
                    <label for="surname">Your message *</label>
                    <%= f.text_area :message, class: "form-control", placeholder: "Enter your message" %>
                  </div>
                  <div class="text-center">
                    <%= f.submit "Send Message", class: "btn btn-primary btn-block" %>
                  </div>
                </div>
              </div>
            <% end %>
            <div class="col-md-6">
              <p class="lead"><%= sanitize @landing_page_content[9].content %></p>
              <p><%= sanitize @landing_page_content[10].content %></p>
              <p class="social"><a href="https://twitter.com/yodorsett" title="" class="twitter"><i class="fa fa-twitter"></i></a><a href="https://www.linkedin.com/in/taylordorsett" title="" class="gplus"><i class="fa fa-linkedin"></i></a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Javascript files-->
  <!-- jQuery-->
  
</body>